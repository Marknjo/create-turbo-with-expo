{
  "extends": "@mj/tsconfig/base.json",
  "compilerOptions": {
    /* Paths */
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@comps/*": ["./components/*"]
    },
    "jsx": "react",
    "types": ["nativewind/types"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./*.ts",
    "./**/*.mdx",
    "../ui/components/Buttons/MyButtons.tsx",
    "postcss.config.mjs",
    "types/images.d.ts"
  ],
  "exclude": ["node_modules"]
}
